<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <TextView
        android:id="@+id/weatherHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/left_margin_xx"
        android:text="@string/weather_info_heading"/>

    <ListView
        android:id="@+id/weather_list"
        android:layout_marginTop="@dimen/left_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/list_backgorund"
        />
    <TextView
        android:id="@+id/noResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/text_size_x"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/top_margin_lyt"
        android:text="No Results found"/>


</LinearLayout>
